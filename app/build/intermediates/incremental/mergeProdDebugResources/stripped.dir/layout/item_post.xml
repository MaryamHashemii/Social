<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <LinearLayout
        android:id="@+id/parent_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/item_post_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <com.social.test.presentation.BaseImageView
                    android:id="@+id/iv_pic"
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/like_number"
                    style="@style/TextAppearance.Social.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="start"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/comment_number"
                    style="@style/TextAppearance.Social.Subtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:padding="8dp"
                    android:gravity="start" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/last_comment"
                    style="@style/TextAppearance.Social.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:padding="8dp"
                    android:gravity="start" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/gray_100" />
    </LinearLayout>


         